ORIG_USERNAME=""
ORIG_USERMAIL=""
NEW_USERNAME=""
NEW_USERMAIL=""
git filter-branch --env-filter '
an="$GIT_AUTHOR_NAME"
am="$GIT_AUTHOR_EMAIL"
cn="$GIT_COMMITTER_NAME"
cm="$GIT_COMMITTER_EMAIL"
if [ "$GIT_COMMITTER_EMAIL" == $ORIG_USERMAIL ]
then
cn=$NEW_USERNAME
cm=$NEW_USERMAIL
fi
if [ "$GIT_AUTHOR_EMAIL" == $ORIG_USERMAIL ]
then
an=$NEW_USERNAME
am=$NEW_USERMAIL
fi
export GIT_AUTHOR_NAME="$an"
export GIT_AUTHOR_EMAIL="$am"
export GIT_COMMITTER_NAME="$cn"
export GIT_COMMITTER_EMAIL="$cm"
'
